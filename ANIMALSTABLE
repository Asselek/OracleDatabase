CREATE TABLE ANIMALS
(
    ANIMAL_ID NUMBER(5,0) PRIMARY KEY,
    AGE NUMBER(5,0),
    IMAGE VARCHAR2(2000),
    GENDER VARCHAR2(10),
    FOOD_ID NUMBER(4,0),
    GENUS VARCHAR2(25),
    EVENT_ID NUMBER(4,0),
    ZOOID NUMBER(4,0),
    CONSTRAINT A_FK_FOOD FOREIGN KEY(FOOD_ID) REFERENCES FOOD(FOOD_ID),
    CONSTRAINT A_FK_GENUS FOREIGN KEY(GENUS) REFERENCES CLASSIFICATION(GENUS),
    CONSTRAINT A_FK_EVS FOREIGN KEY(EVENT_ID) REFERENCES EVENTS(EVENT_ID),
    CONSTRAINT A_FK_ZID FOREIGN KEY(ZOOID) REFERENCES ZOO(ZOOID)
)

COMMIT;

ALTER TABLE ANIMALS ADD ANIMAL_NAME VARCHAR2(45);
COMMIT;
