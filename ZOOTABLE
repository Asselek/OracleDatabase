CREATE TABLE ZOO
(
    ZOOID NUMBER(4,0) PRIMARY KEY,
    ADDRESS VARCHAR2(25),
    ZOO_EMAIL VARCHAR2(25) CHECK(REGEXP_LIKE(ZOO_EMAIL, '^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,4}$'))
)

COMMIT;

ALTER TABLE ZOO MODIFY ZOO_EMAIL VARCHAR2(26) UNIQUE

COMMIT;

ALTER TABLE ZOO ADD ZOO_NAME VARCHAR2(25)

COMMIT;

ALTER TABLE ZOO DROP COLUMN ANIMAL_NAME

COMMIT
