CREATE TABLE STAFF_TABLE
(
    STAFF_ID NUMBER(4,0) PRIMARY KEY,
    ZOOID NUMBER(4,0),
    FIRST_NAME VARCHAR2(26),
    LAST_NAME VARCHAR2(26),
    STAFF_EMAIL VARCHAR2(26) CHECK(REGEXP_LIKE(STAFF_EMAIL, '^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,4}$')),
    CONSTRAINT STAFF_ZOO FOREIGN KEY(ZOOID) REFERENCES ZOO(ZOOID),
    ROLE VARCHAR2(25) DEFAULT('STAFF')   
)


COMMIT;

ALTER TABLE STAFF_TABLE ADD STAFF_PASSWORD VARCHAR2(25)

COMMIT;
